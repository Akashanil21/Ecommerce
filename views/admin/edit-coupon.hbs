<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Coupon</h2>
                <form action="/admin/edit-coupon/{{coupon._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Coupon code</label>
                    <input type="text" name="Coupon" class="form-control" value="{{coupon.Coupon}}">
                    <label for="">Date</label>
                    <input type="text" name="Date" class="form-control" value="{{coupon.Date}}">
                    <label for="">Minimum Amount</label>
                    <input type="text" name="Amount" class="form-control" value="{{coupon.Amount}}">
                    <label for="">Discount</label>
                    <input type="text" name="Discount" class="form-control" value="{{coupon.Discount}}">

                    <button type="submit" class="btn btn-success mt-5">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
