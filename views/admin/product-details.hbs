<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Home</title>
  <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
</head>
<body>
  
  <section>
  <div class="container mt-5">
    <div class="mt-5">
        <a href="/admin/add-product" class="btn btn-success mb-3">Add Product</a>
    </div>
    <table class="table table-hover border" id="myTable">
      <thead>
        <tr>
          <th scope="col" class="border-dark">No</th>
          <th scope="col" class="border-dark">Product Name</th>
          <th scope="col" class="border-dark">Category</th>
          <th scope="col" class="border-dark">Subcategory</th>
          <th scope="col" class="border-dark">Stock</th>
          <th scope="col" class="border-dark">Price</th>
          <th scope="col" class="border-dark">Image</th>
          <th scope="col" class="border-dark">Edit</th>
          <th scope="col" class="border-dark">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row" class="border-dark">{{addOne @index}}</th>
            <td class="border-dark">{{this.Name}}</td>
            <td class="border-dark">{{this.Category}}</td>
            <td class="border-dark">{{this.Subcategory}}</td>
            <td class="border-dark">{{this.Stock}}</td>
            <td class="border-dark">{{this.Price}}</td>
            <td class="border-dark"><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt="" /></td>
            <td class="border-dark"><a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
            </td>
            <td class="border-dark"><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger delete"  >Delete</a>  </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready( function () {
    $('#myTable').DataTable();
} );
    </script>
</body>
</html>

<script>
  $(".delete").on("click",function(e){
    e.preventDefault()
    var self=$(this)
    Swal.fire({
  title: 'Do you want to delete this product?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
    
    location.href=self.attr("href")
  }
})

  })

</script>
