<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User details</title>
    <link
      rel="stylesheet"
      href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css"
    />
  </head>
  <body>
    <section>
      <div class="container mt-5">

        <table class="table table-hover border" id="myTable">
          <thead>
            <tr>
              <th scope="col" class="border-dark">SI NO</th>
              <th scope="col" class="border-dark">Name</th>
              <th scope="col" class="border-dark">Email</th>
              <th scope="col" class="border-dark">Number</th>
              <th scope="col" class="border-dark"></th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <th scope="row" class="border-dark">{{addOne @index}}</th>
                <td class="border-dark">{{this.Name}}</td>
                <td class="border-dark">{{this.Email}}</td>
                <td class="border-dark">{{this.Number}}</td>
                <td class="border-dark">
                  {{#if this.Access}}
                    <a
                      href="/admin/block-user/{{this._id}}"
                      class="btn btn-danger"
                    >Block</a>
                  {{else}}
                    <a
                      href="/admin/unblock-user/{{this._id}}"
                      class="btn btn-dark"
                    >Unblock</a>
                  {{/if}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    ></script>
    <script
      src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"
    ></script>
    <script>
      $(document).ready( function () { $('#myTable').DataTable(); } );
    </script>
  </body>
</html>