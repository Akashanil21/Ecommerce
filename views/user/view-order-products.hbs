<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    
  </head>
  <body>
    <section>
    <div class="colorlib-product">
    <div class="container mt-5">
		<div class="row">
			   <div class="row row-pb-md">
                    {{#each products}}
					<div class="col-md-3 col-lg-3 mb-4 text-center">
						<div class="product-entry border">
							<a href="#" class="prod-img">
								<img src="/product-images/{{this.product._id}}.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
							</a>
							<div class="desc">
                                <h2 class="card-title">{{this.product.Name}}</h2>
                                <p class="card-text">{{this.product.Category}}</p>
                                <p class="card-text">Rs.{{this.product.Price}}</p>
                                <p class="card-text">Quantity:{{this.quantity}}</p>
								{{!-- <h2><a href="#">{{this.product.Name}}</a></h2>
                                <span class="Category">{{this.product.Category}}</span>
								<span class="price">Rs.{{this.product.Price}}</span> --}}
							</div>
						</div>
					</div>
					{{/each}}
				</div>

		</div>
     

    </div>
</div>
</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>


