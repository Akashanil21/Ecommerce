


		<div class="colorlib-product">
			<div class="container">
				<div class="row row-pb-lg">
					<div class="col-md-12">
						<div class="product-name d-flex">
							<div class="one-forth text-left px-4">
								<span>Product Details</span>
							</div>
							<div class="one-eight text-center">
								<span>Price</span>
							</div>
							<div class="one-eight text-center">
								<span></span>
							</div>
						</div>
						{{#each products}}
						<div class="product-cart d-flex">
							<div class="one-forth">
								
								<div class="product-img" >
									<img style="width: 100px;height: 100px;" src="/product-images/{{this.product._id}}.jpg" alt="" />
									
								</div>
								<div class="display-tc">
									<h3>{{this.product.Name}}</h3>
								</div>
								
							</div>
							
							<div class="one-eight text-center">
								<div class="display-tc">
									<span class="price">Rs.{{this.product.Price}}</span>
								</div>
							</div>
							<div class="one-eight text-center">
								<div class="display-tc">
									<button onclick="addToCart('{{product._id}}')" class="btn btn-primary">Add to cart</button>
								</div>
							</div>
							<div class="one-eight text-center">
								<div class="display-tc">
									
									<button class="btn btn btn-danger remove" onclick="removeWish('{{this._id}}','{{this.product._id}}')">Remove</button>
								</div>
							</div>
						</div>
						{{/each}}
					</div>
				</div>
				<div class="row row-pb-lg">
					<div class="col-md-12">
						<div class="total-wrap">
							<div class="row">
								<div class="col-sm-8">
									<form action="#">
										<div class="row form-group">
											<div class="col-sm-9">
												<input type="text" name="quantity" class="form-control input-number" placeholder="Your Coupon Number...">
											</div>
											<div class="col-sm-3">
												<input type="submit" value="Apply Coupon" class="btn btn-primary">
											</div>
										</div>
									</form>
								</div>
								<div class="col-sm-4 text-center">
									<div class="total">
										{{!-- <div class="sub">
											<p><span>Subtotal:</span><span> Rs.<span id="total">{{total}}</span></span></p>
											<p><span>Delivery:</span> <span>Rs.0</span></p>
											<p><span>Discount:</span> <span>Rs.0</span></p>
										</div> --}}
										<div class="grand-total">
											{{!-- <p><span><strong>Total Amount:</strong></span><span id="total">{{total}}</span></p> --}}
										</div>
									</div>
								</div>
								<a href="/checkout" class="btn btn-success mt-3">Check out</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script>
			function removeWish(wishId,productId){
               Swal.fire({
               title: 'Do you want to remove this product from the wishlist?',
               text: "You won't be able to revert this!",
               icon: 'warning',
               showCancelButton: true,
               confirmButtonColor: '#3085d6',
               cancelButtonColor: '#d33',
               confirmButtonText: 'Yes'
              }).then((result) => {
            if (result.isConfirmed) {
	               $.ajax({
					url:'/remove-wishlist-product',
					data:{
						wishlist:wishId,
						product:productId
					},
					method:'post',
					success:(response)=>{
						 location.reload()
						
					}
				})    
         }
      })	
	}
</script>